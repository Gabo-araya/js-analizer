# Production Environment Variables for JavaScript & CSS Library Analyzer
# Copy this file to .env and fill in the values

# Flask Configuration
FLASK_ENV=production
FLASK_SECRET_KEY=your-super-secure-secret-key-here-generate-with-openssl-rand-hex-32
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Database Configuration
DATABASE_PATH=/secure/path/to/analysis.db

# Security Settings
SESSION_COOKIE_SECURE=True
CSRF_SECRET_KEY=another-secure-key-for-csrf-protection

# Logging
LOG_LEVEL=WARNING
LOG_FILE=/var/log/js-analyzer/security.log

# Optional: External service configurations
# SENTRY_DSN=https://your-sentry-dsn
# SLACK_WEBHOOK=https://hooks.slack.com/your-webhook

# Admin User (only for initial setup - remove after first run)
INITIAL_ADMIN_USERNAME=admin
INITIAL_ADMIN_PASSWORD=generate-secure-password-here